{
  "name": "zsw-chat-interface",
  "version": "0.1.0",
  "private": true,
  "main": "build/electron-main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "npm run electron:compile && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron build/electron-main.js\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder",
    "electron:compile": "tsc electron-main.ts electron-preload.ts --target ES2017 --module commonjs --esModuleInterop --skipLibCheck --outDir build",
    "clean": "rm -rf build out .next",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "next": "15.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^2.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.zsw.chat",
    "productName": "ZSW Chat",
    "copyright": "Copyright Â© 2025 ZSW",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Network;Chat"
    }
  }
}